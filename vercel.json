{
  "version": 2,
  "builds": [
    { "src": "index.html",         "use": "@vercel/static" },
    { "src": "styles/*.css",       "use": "@vercel/static" },
    { "src": "scripts/*.js",       "use": "@vercel/static" },
    { "src": "assets/images/*",    "use": "@vercel/static" },
    { "src": "config/*.json",      "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
